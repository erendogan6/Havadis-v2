<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/upload"
    android:background="@drawable/gradient"
    tools:context=".fragment.YuklemeEkrani">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="304dp"
        android:layout_height="271dp"
        android:layout_marginTop="144dp"
        android:onClick="yukle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/upload" />

    <EditText
        android:id="@+id/aciklama"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Açıklama Giriniz"
        android:background="#3BAA9B9B"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yuklemeButonu"
        style="@android:style/Widget.Button"
        android:layout_width="157dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/buton_arkaplan"
        android:onClick="yuklemeButonu"
        android:text="Yükle"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aciklama" />

</androidx.constraintlayout.widget.ConstraintLayout>